<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.parking">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Parking">
        <activity
            android:name="com.example.parking.presentation.activities.EditModelActivity.EditModelActivity"
            android:exported="false" />
        <activity
            android:name="com.example.parking.presentation.activities.CreateModelActivity.CreateModelActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.parking.presentation.activities.AdminActivity.AdminMainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme" />
        <activity
            android:name="com.example.parking.presentation.activities.UserActivity.UserMainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme" />
        <activity
            android:name="com.example.parking.presentation.activities.SplashScreenActivity.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.parking.presentation.activities.MainActivity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme" />
    </application>

</manifest>