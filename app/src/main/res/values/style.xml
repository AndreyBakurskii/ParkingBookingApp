<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:forceDarkAllowed">false</item>
    </style>
    <style name="MainTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
        <item name="colorPrimary">@color/primary_600</item>
    </style>
    <style name="AlertDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:textColor">@color/primary_600</item>
        <item name="android:background">@color/base_800</item>
        <item name="android:colorAccent">@color/primary_600</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_600</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary_600</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ButtonPrimary">
        <item name="android:layout_width">379dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_background_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/base_900</item>
    </style>
    <style name="ButtonSecondary" parent="ButtonPrimary">
        <item name="android:background">@drawable/button_background_secondary</item>
        <item name="android:textColor">@color/primary_600</item>
    </style>
    <style name="ButtonText" parent="ButtonSecondary">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:popupBackground">@color/primary_600</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:textColor">@color/base_900</item>
    </style>
    <style name="TextHeader1">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primary_600</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">-0.015</item>
    </style>
    <style name="TextHeader2" parent="TextHeader1">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="TextHeader3" parent="TextHeader1">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/base_50</item>
    </style>
    <style name="Body2" parent="Body1">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Body3" parent="Body2">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Caption" parent="Body3">
        <item name="android:textColor">@color/base_400</item>
    </style>
    <style name="ProgressBarSpinner" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">@color/primary_600</item>
    </style>
</resources>